block var

doctype html

html(lang="en")
	head
		title #{title}
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=no")
		meta(http-equiv="X-UA-Compatible", content="ie=edge")
		link(href="https://fonts.googleapis.com/css?family=Baloo+2:400,500,600,700,800&display=swap&subset=devanagari,latin-ext,vietnamese" rel="stylesheet")
		link(rel="stylesheet", href="./css/core.min.css")
		link(rel="stylesheet", href="./css/main.min.css")
	body
		#loading
			.logo-loader
				img(src="./assets/loading.gif")
			.progstat-wrapper Loading:
				span#progstat 0
				| %
			#progress
		block aside
			include _aside-admin
		block header
			include _header-admin
		block banner,breadcrumb
		main
			block main
			#js-page-verify(class=bodyClass hidden)
		script(type="text/javascript", src="./js/core.min.js")
		script(type="text/javascript", src="./js/main.min.js")
		block scripts